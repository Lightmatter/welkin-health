{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "console": "integratedTerminal",
      "program": "${file}",
      "request": "launch",
      "type": "python",
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "build"
    },
    {
      "name": "Python: Current File, Deep Inspect",
      "console": "integratedTerminal",
      "justMyCode": false,
      "program": "${file}",
      "request": "launch",
      "type": "python",
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "build"
    },
    {
      "name": "Python: Debug Tests",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
